            <script>
                function load(){
                    var req=new XMLHttpRequest()
                    req.onreadystatechange=function()
                    if(this.readyState==4 & &this.status==200){
                        document.getElementById("xyz").innerHTML=<this.responseText
                    }
                    {
                        req.open('GET','data.txt',true)
                        req.send()
                    }
                    
                    </script>
